<%= form_tag login_path do %>
    <%= label_tag :email %>
    <%= text_field_tag :email %><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br>
    <%= submit_tag "Login!" %><br>
<% end %>
<%= button_to "Forgot your password?" , password_reset_path %>
<%= button_to "Organisations!" , organisations_path %>