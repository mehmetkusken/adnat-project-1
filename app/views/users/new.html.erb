

    <%= form_for [@organisation , @user] do |u| %>
    <%= render partial: "layouts/errors", locals: {record: @user} %>
    <%= u.text_field :name %>
    <%= u.label :name %><br>
    <%= u.text_field :email %>
    <%= u.label :email %><br>
    <%= u.password_field :password %>
    <%= u.label :password %><br>
    <%= u.password_field :password_confirmation %>
    <%= u.label :password_confirmation %><br>

    <%= u.label :organisation%>
    <%= u.collection_select :organisation_id, Organisation.all, :id, :name, prompt: true %>
    
     <%= u.submit "Sign Up!"%>
    <% end %>

    
    