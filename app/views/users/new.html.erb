

    <%= form_for @user do |u| %>
    <%= u.text_field :name %>
    <%= u.label :name %><br>
    <%= u.text_field :email %>
    <%= u.label :email %><br>
    <%= u.password_field :password %>
    <%= u.label :password %><br>
    <%= u.password_field :password_confirmation %>
    <%= u.label :password_confirmation %><br>
     <%= u.submit "Sign Up!"%>
    <% end %>
    